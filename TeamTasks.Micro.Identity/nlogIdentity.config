<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="G:\DotNetProjects\TeamTasks.Micro\TeamTasks.Micro.Identity\Logs\logs.txt"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd ">

    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
        <add assembly="NLog.Targets.ElasticSearch" />
    </extensions>

    <targets>
        <target xsi:type="ElasticSearch"
                name="elastic"
                uri="http://localhost:9200"
                includeAllProperties="true"
                index="logs-${date:format=yyyy.MM.dd}">
        </target>
        <target xsi:type="File" name="allfile"
                fileName="G:\DotNetProjects\TeamTasks.Micro\TeamTasks.Micro.Identity\Logs\nlog-AspNetCore-all-${shortdate}.log"
                layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"/>

        <target xsi:type="File" name="ownFile-web"
                fileName="G:\DotNetProjects\TeamTasks.Micro\TeamTasks.Micro.Identity\Logs\nlog-AspNetCore-own-${shortdate}.log"
                layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}"/>

        <target xsi:type="Console" name="lifetimeConsole" layout="${MicrosoftConsoleLayout}"/>
    </targets>

    <rules>
        <logger name="*" minlevel="Trace" writeTo="allfile"/>

        <logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="lifetimeConsole, ownFile-web" final="true"/>

        <logger name="Microsoft.*" maxlevel="Info" final="true"/>
        <logger name="System.Net.Http.*" maxlevel="Info" final="true"/>

        <logger name="*" minlevel="Trace" writeTo="ownFile-web"/>
    </rules>
</nlog>